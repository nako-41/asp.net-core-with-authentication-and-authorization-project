@using Case_EntityLayer.Concrete;

@model SurveyAnswer


@{
    ViewData["Title"] = "Survey";
}

@{
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <style>
        .btn-primary {
            border-radius: 15px;
        }

            .btn-primary:hover {
                background-color: aqua;
                font-size: 20px;
            }

        #hidden {
            display: none
        }

    </style>

    <title>Anket</title>
</head>

<body>

    <section id="header">

        <div class="bg-white text-center py-4">
            <div class="container">
                <h2 class="text-danger display-4 my-4 ">Evden Calisma Anketi</h2>
            </div>
        </div>


    </section>

    <div class="result d-none py-4 bg white text-center">
        <div class="container lead">
            <p><span class="text-danger display-4 p-3">0%</span>Ofise Dönmek İstiyorsun</p>
        </div>
    </div>


    <section id="question tum">
        <div class="bg-secondary py-3">

            <div class="container">

                <form action="Survey" class="soru-formu text-white" method="post">
                    <div class="my-4">

                        <p id="hidden">USERID: @ViewBag.user </p>
                        <input class="form-check-input" id="hidden" style="width:150px;" type="text" asp-for="userId" />
                        <p>1. Ofiste Daha Verimli Çalışıyorum </p>
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Survey1" value="true" checked>
                                <label class="form-check-label">
                                    Evet
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Survey1" value="false" >
                                <label class="form-check-label">
                                    Hayır
                                </label>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="my-4">
                        <div class="form-group">
                            <p>2. Ofise Tam Zamanlı Dönmek İstiyorum</p>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Survey2" value="true" checked>
                                <label class="form-check-label">
                                    Evet
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="Survey2" value="false">
                                <label class="form-check-label">
                                    Hayır
                                </label>
                            </div>


                        </div>
                 </div>
                        <hr>
                        <div class="my-4">
                        <p>3. Evdeyken Teknik Sorunlar Daha Zor Çözülüyor</p>
                            <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey3" value="true" checked>
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey3" value="false">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                    
                        </div>
                        <hr>
                        <div class="my-4">
                        <p>4. Evdeyken Jiradaki Haftalık Taskları Yetiştirmekte Zorlanıyorum</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey4" value="true" checked>
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey4" value="false">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>

                        </div>
                        <hr>
                        <div class="my-4">
                        <p>5. Bir ofisiniz / çalışmak için ayrı bir odanız var mı?</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey5" value="true" checked>
                            <label class="form-check-label">
                                Evet
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Survey5" value="false">
                            <label class="form-check-label">
                                Hayır
                            </label>
                        </div>
                        </div>
                        <p>YAS</p>
                    <div class="form-check">
                        <input class="form-check-input" style="width:250px;" type="text" asp-for="Age" value="">
                        <label class="form-check-label">
                        </label>
                    </div>
                        <div class="my-4">
                            <p>CINSIYET</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="true" checked>
                            <label class="form-check-label">
                                BAY
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="false">
                            <label class="form-check-label">
                                BAYAN
                            </label>
                        </div>
                        </div>
                        <div class="my-4">
                            <p>EGITIM BILGISI</p>
                            <div class="form-check">
                            </div>
                            <div class="form-check">
                            <select id="education"  asp-for="educationInformations" class="form-control">
                                <option value="OnLisans">Onlisans</option>
                                <option value="Lisans">Lisans</option>
                                <option value="Yüksek Lisans">Yüksek Lisans</option>
                            </select>
                            </div>
                        </div>
                        <div class="my-4">
                            <p>SEHIR</p>
                            <div class="form-check">
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" style="width:150px;" type="text" value="" asp-for="City">
                            </div>
                        </div>
                        <div class="my-4">
                            <p>ILCE</p>
                            <div class="form-check">
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" style="width:150px;" type="text" value="" asp-for="District">
                            </div>
                        </div>


                        <div class="text-center">

                            <input class="btn btn-success" type="submit" value="GONDER" id="aButton" />

                        </div>

                </form>

            </div>

        </div>


    </section>
    <script>
        document.getElementById("aButton").addEventListener("click", function (event) {
            // Formdaki her bir giriş alanını kontrol edin
            var survey1 = document.querySelector('input[name="Survey1"]:checked');
            var survey2 = document.querySelector('input[name="Survey2"]:checked');
            var survey3 = document.querySelector('input[name="Survey3"]:checked');
            var survey4 = document.querySelector('input[name="Survey4"]:checked');
            var survey5 = document.querySelector('input[name="Survey5"]:checked');
            var age = document.getElementById("Age").value;
            var gender = document.querySelector('input[name="Gender"]:checked');
            var educationInformation = document.getElementById("education").value;
            var city = document.getElementById("City").value;
            var district = document.getElementById("District").value;

        
            if (!survey1 || !survey2 || !survey3 || !survey4 || !survey5 || !age || !gender || !educationInformation || !city || !district) {
                alert("Lütfen tüm alanları doldurun.");
                event.preventDefault(); 
            }
        });
    </script>


@*     <script src="~/anket/main.js"></script>*@

</body>

</html>