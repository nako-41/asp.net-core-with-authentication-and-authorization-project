@model RegisterViewModel

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link href="~/kayıt-kayit\style.css" rel="stylesheet" />

    <style>
        #message-popup {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(255, 0, 0, 0.8); /* Kırmızı arkaplan rengi */
            color: orangered /* Beyaz metin rengi */
            padding: 20px;
            border-radius: 5px;
            z-index: 9999;
        }
    </style>

    <title>Form</title>
</head>

<body>


    <div id="kayitFormu">
        <form action="Register" method="post" id="myform">
            <h3>Kullanıcı Kayıt Formu</h3>

            @*            <input type="text" name="adiniz" placeholder="Kullanıcı Adınızı Giriniz" />

            <input type="email" name="eposta" placeholder="Mail Adresinizi Giriniz" />

            <input type="password" name="parola" placeholder="Şifrenizi Giriniz" />*@
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Name)
                </div>
                <div class="col-md-9">
                    <input type="text" id="name" class="form-control" asp-for="Name" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Surname)
                </div>
                <div class="col-md-9">
                    <input type="text" id="surname" class="form-control" asp-for="Surname" />


                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Username)
                </div>
                <div class="col-md-9">

                    <input type="text" id="username" class="form-control" asp-for="Username" />


                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Email)
                </div>
                <div class="col-md-9">

                    <input type="email" id="mail" class="form-control" asp-for="Email" />

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m=>m.Password)
                </div>
                <div class="col-md-9">

                    <input type="password" id="password" class="form-control" asp-for="Password" />

                </div>
            </div>
            <div class="alert alert-danger" id="message">
                @ViewBag.message
            </div>
            <input class="btn" type="submit" value="KAYIT OL" id="submitButton" />
      

        </form>

    </div>


    <script>
        document.getElementById("submitButton").addEventListener("click", function (event) {
            var name = document.getElementById("name").value;
            var surname = document.getElementById("surname").value;
            var username = document.getElementById("username").value;
            var mail = document.getElementById("mail").value;
            var password = document.getElementById("password").value;


            if (!name || !surname || !username || !mail || !password) {
                alert("Lütfen tüm alanları doldurun.");
                event.preventDefault();
            }
        });

        document.addEventListener("DOMContentLoaded", function () {
            var message = document.getElementById("message").textContent.trim();
            if (message) {
                showMessagePopup(message);
            }
        });

        function showMessagePopup(message) {
            var messagePopup = document.createElement("div");
            messagePopup.id = "message-popup";
            messagePopup.textContent = message;
            document.body.appendChild(messagePopup);
        }
        setTimeout(function () {
            document.body.removeChild(messagePopup);
        }, 7000);


    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var form = document.getElementById("myForm");
            form.addEventListener("submit", function (event) {
                event.preventDefault();
                form.reset();
            });
        });
    </script>



    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    @*    <script src="~/js/Script.js"></script>*@


</body>
</html>